<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:background="@drawable/kabegami22"
    android:weightSum="2">

    <TextView android:text="赤ちゃんの登録"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_marginBottom="10dp">
    </TextView>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.80"
        android:layout_marginTop="79dp"

        android:layout_alignParentStart="true">

        <TableRow>

            <TextView
                android:layout_column="0"
                android:layout_span="1"/>
            <TextView
                android:layout_column="1"
                android:layout_span="1"/>
            <TextView
                android:layout_column="2"
                android:layout_span="1"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_column="0"
                android:layout_span="1"
                android:text="お名前"
                android:layout_weight="0.2"
                />
            <EditText
                android:layout_column="1"
                android:layout_span="1"
                android:layout_weight="0.5"
                android:background="#ffffff"
                android:maxLength="8"
                android:inputType="text"
                android:layout_width="250dp"
                android:layout_height="35dp"
                android:id="@+id/editt" />
        </TableRow>
        <TableRow>
            <TextView />
        </TableRow>
        <View android:layout_width="wrap_content" android:background="#000000" android:layout_height="1dp" android:layout_marginBottom="1dp"></View>

        <TableRow>
            <TextView />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_column="0"
                android:text="性別"
                android:layout_weight="0.3"
                />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="#ffffff"
                android:id="@+id/sebetuspi" />

        </TableRow><TableRow><TextView />
    </TableRow>
        <View android:layout_width="wrap_content" android:background="#000000" android:layout_height="1dp" android:layout_marginBottom="1dp"></View>
        <TableRow><TextView /></TableRow>
        <TableRow>
            <TextView
                android:layout_column="0"
                android:text="生年月日"
                android:layout_weight="0.3"
                />
            <EditText
                android:layout_column="1"
                android:background="#ffffff"
                android:layout_height="35dp"
                android:focusable="false"
                android:layout_weight="0.5"

                android:onClick="onclickcal"
                android:id="@+id/editcla" />
        </TableRow>
        <TableRow>
            <TextView />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:text="登　　録"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FFFF"
                android:id="@+id/savebtn"
                android:onClick="onclickkiroku" />
        </TableRow>
    </TableLayout>

</RelativeLayout>
